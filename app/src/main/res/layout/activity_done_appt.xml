<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_search_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:hint="Mã mẫu xét nghiệm" />
        <Button
            android:id="@+id/btn_search_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tìm"
            android:minHeight="40dp"
            android:layout_marginTop="10dp"
            style="@style/custom_button_blue"
            android:layout_below="@id/edt_search_sample"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txt_sample_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/btn_search_sample"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Mã: 1324"
            />
        <TextView
            android:id="@+id/txt_sample_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/txt_sample_code"
            android:textStyle="bold"
            android:text="Loại mẩu: máu"
            /> <TextView
            android:id="@+id/txt_cust_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/txt_sample_type"
        android:textStyle="bold"
            android:text="Tên bn: Đức BM"
            />
        <TextView
            android:id="@+id/txt_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không tìm thấy"
            android:textSize="18sp"
            android:textColor="@color/color_red_500"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/btn_change_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã lấy mẫu"
            style="@style/custom_button_blue"
            android:layout_marginTop="30dp"
            android:layout_below="@id/txt_cust_name"
            />

    </RelativeLayout>
</LinearLayout>